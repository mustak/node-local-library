{% extends "layouts/default.njk" %}

{%- block headTitle -%}
    {{title}}
{%- endblock headTitle -%}

{% block content %}
	<h1>{{title}}</h1>

	<ul>
		{% for author in author_list %}
			<li>
				<a href='{{author.url}}'>{{author.name}}</a>
				[{{author.lifespan}}]
			</li>
		{% else %}
			<li>There are no authors.</li>
		{% endfor %}
	</ul>
{% endblock content %}