{% extends "layouts/default.njk" %}

{%- block headTitle -%}
    {{title}}
{%- endblock headTitle -%}

{% block content %}
	<h1>{{title}}</h1>

	<ul>
		{% for genre in genre_list %}
			<li>
				<a href='{{genre.url}}'>{{genre.name}}</a>
			</li>
		{% else %}
			<li>There are no genres.</li>
		{% endfor %}
	</ul>
{% endblock content %}